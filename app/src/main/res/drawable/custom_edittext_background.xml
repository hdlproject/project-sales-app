<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/tv_white"
                android:endColor="@color/tv_white"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="@color/tv_normal_press" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/tv_white"
                android:endColor="@color/tv_white"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="@color/tv_gray"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>